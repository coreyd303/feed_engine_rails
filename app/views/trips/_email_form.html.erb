<div class="thumbnail" id="email">
    <%= form_for @invite, :html => {:class => "form-horizontal col-md-12"} do |f| %>
      <div class="form-group">
        <%= f.text_area   :to , :class => 'form-control', :placeholder => "friends@example.com" %>
      </div>
      <%= f.hidden_field :from, value: current_user.email %>
      <%= f.hidden_field :trip, value: @trip.id %>
      <div class="form-group">
        <%= f.text_field  :subject , :class => 'form-control', :placeholder => "Subject" %>
      </div>

      <div class="form-group">
        <%= f.text_area   :body , :class => 'form-control', :placeholder => "Message" %>
      </div>
      <div class="form-group">
        <%= f.submit  "Send Email" , :class => 'btn btn-info btn-block' %>
      </div>
    <% end %>
</div>