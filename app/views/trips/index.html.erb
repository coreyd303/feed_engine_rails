<div class="jumbotron">
<h2 class="site-text">Our Members Trips</h2>
</div>

<div class="row">
  <% @trips.each do |trip| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag trip.coverphoto, style: "height: 150px; width: 150px; margin-top: 10px;" %>
        <div class="caption">
          <h3 class="site-text"> <%= link_to trip.name, trip_path(trip) %> </h3>
          <p class="site-text"> 
            They are going to <%= trip.resort.name %> on <%= trip.date.strftime("%m/%d/%Y") %><br/>
            <%= trip.description %> 
          </p> 
        </div>
      </div>
    </div>
  <% end %>
</div>

