<div class="jumbotron">
  <p>Forcast.io</p>
</div>

<div class="jumbotron">
  <h2 class="site-title">Plan your trip!</h2>
  <%= form_for @trip, :html => {:class => "form-horizontal"} do |f| %>
    <div>
      <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
          <%= f.text_field :name, :class => 'form-control', :placeholder => "Trip Name" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
          <%= f.text_area :description, :class => 'form-control', :placeholder => "Description: e.g. Sick trip with the bros" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
          <%= f.label :resort, class: "control-label site-title"%>
          <%= f.collection_select :trip_location, Resort.order(:name),:id,:name, include_blank: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
          <%= f.submit :submit, :class => 'btn btn-lg btn-info' %>
        </div>
      </div>
    </div>
  <% end %>
</div>


