<div class="jumbotron">
  <div class="caption">
    <h1><%= @trip.name %></h1>
    <%= @trip.description %>
    <%= @trip.date.strftime('%A, %b %d') %>
    <%= @trip.trip_location %>
    <% if current_user %>
    <div class="row">
    <%= form_for @invite, :html => {:class => "form-horizontal col-md-6 col-md-offset-3"} do |f| %>
      <div class="form-group">
        <%= f.text_area   :to , :class => 'form-control', :placeholder => "Make sure you put commas between addresses" %>
      </div>
      <%= f.hidden_field :from, value: current_user.email %>
      <%= f.hidden_field :trip, value: @trip.id %>
      <div class="form-group">
        <%= f.text_field  :subject , :class => 'form-control', :placeholder => "Let's go to the mountains!" %>
      </div>

      <div class="form-group">
        <%= f.text_area   :body , :class => 'form-control', :placeholder => "Include some info about the trip" %>
      </div>
      <div class="form-group">
        <%= f.submit  "Send Email" , :class => 'btn btn-info btn-block' %>
      </div>
    <% end %>
    </div>
  <% end %>
  </div>
</div>
